<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InvoiceActivity"
    android:orientation="vertical"
    android:padding="18dp"
    android:background="@color/orange2">


    <!-- Title -->
    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Invoice Details"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="berikut adalah rincian pesanan anda:"
        android:textSize="14sp"
        android:layout_marginTop="50dp"/>

    <!-- Nama Penerima -->
    <TextView
        android:id="@+id/tvNamaPenerima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nama Penerima: "
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etNamaPenerima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Penerima"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:layout_marginBottom="12dp"/>

    <!-- No. Telepon -->
    <TextView
        android:id="@+id/tvNomorTelepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. Telepon: "
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etNomorTelepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan No. Telepon"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_marginBottom="12dp"/>

    <!-- Alamat -->
    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat: "
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alamat"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:layout_marginBottom="12dp"/>

    <!-- Daftar Barang yang dibeli -->
    <TextView
        android:id="@+id/tvDaftarBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Barang:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- Daftar barang yang dibeli akan ditampilkan di sini -->
    <TextView
        android:id="@+id/tvDaftarBarangList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Total Harga -->
    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Harga: "
        android:textSize="20sp"
        android:textColor="@color/orange"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="NOTE : silahkan siapkan uang sebesar total harga (COD only)"
        android:textColor="@android:color/holo_red_dark"
        />

    <!-- Spacer untuk mendorong tombol -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Tombol Kirim Invoice -->
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali ke Home"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange"
        android:textColor="@android:color/white"/>
</LinearLayout>
